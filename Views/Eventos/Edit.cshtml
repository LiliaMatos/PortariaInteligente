@model PortariaInteligente.Models.Evento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventoId" />
            <div class="form-group">
                <label asp-for="nomeEvento" class="control-label"></label>
                <input asp-for="nomeEvento" class="form-control" />
                <span asp-validation-for="nomeEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dataEvento" class="control-label"></label>
                <input asp-for="dataEvento" class="form-control" />
                <span asp-validation-for="dataEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaEvento" class="control-label"></label>
                <input asp-for="horaEvento" class="form-control" />
                <span asp-validation-for="horaEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="localEvento" class="control-label"></label>
                <input asp-for="localEvento" class="form-control" />
                <span asp-validation-for="localEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitadoId" class="control-label"></label>
                <select asp-for="VisitadoId" class="form-control" asp-items="ViewBag.AnfitriaoId"></select>
                <span asp-validation-for="VisitadoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
