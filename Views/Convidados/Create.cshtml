@namespace PortariaInteligente.Models
@model PortariaInteligente.Models.Convidado

@{
    ViewData["Title"] = "Novo Convidado";
}

<h1>Criar</h1>

<h4>Convidado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomeConvidado" class="control-label"></label>
                <input asp-for="nomeConvidado" class="form-control" />
                <span asp-validation-for="nomeConvidado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emailConvidado" class="control-label"></label>
                <input asp-for="emailConvidado" class="form-control" />
                <span asp-validation-for="emailConvidado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="celConvidado" class="control-label"></label>
                <input asp-for="celConvidado" class="form-control" />
                <span asp-validation-for="celConvidado" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    ViewBag.Title = "Id";
                }

                <div class="row">
                    <div class="col-md-8">
                        Escolha o tipo de documento:
                        @* Passando o Nome da ViewBag *@
                        @Html.DropDownList("Id", String.Empty)
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="numeroDoctoConvidado" class="control-label"></label>
                <input asp-for="numeroDoctoConvidado" class="form-control" />
                <span asp-validation-for="numeroDoctoConvidado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="carro" class="control-label"></label>
                <input asp-for="carro" class="form-control" />
                <span asp-validation-for="carro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
